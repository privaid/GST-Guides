    <script>
        function updateCalculator() {
            const residential = parseFloat(document.getElementById('residential').value) || 0;
            const commercial = parseFloat(document.getElementById('commercial').value) || 0;
            const total = residential + commercial;
            const tds = total * 0.10;
            
            document.getElementById('resResult').textContent = '‚Çπ' + residential.toLocaleString('en-IN');
            document.getElementById('commResult').textContent = '‚Çπ' + commercial.toLocaleString('en-IN');
            document.getElementById('totalResult').textContent = '‚Çπ' + total.toLocaleString('en-IN');
            document.getElementById('tdsResult').textContent = '‚Çπ' + Math.round(tds).toLocaleString('en-IN');
            
            const statusDiv = document.getElementById('statusMessage');
            if (total >= 2000000) {
                statusDiv.className = 'status-message above';
                statusDiv.innerHTML = '‚ö†Ô∏è YOUR INCOME EXCEEDS ‚Çπ20 LAKHS - GST REGISTRATION IS MANDATORY';
            } else {
                statusDiv.className = 'status-message below';
                const remaining = 2000000 - total;
                statusDiv.innerHTML = '‚úì BELOW ‚Çπ20 LAKHS - NO GST REGISTRATION NEEDED YET<br>Additional income needed: ‚Çπ' + remaining.toLocaleString('en-IN');
            }
        }
        
        document.getElementById('residential').addEventListener('input', updateCalculator);
        document.getElementById('commercial').addEventListener('input', updateCalculator);
        
        window.addEventListener('load', updateCalculator);
    </script>
</body>
</html>
